# ====== 数据源 API 配置 ======

# Product Hunt API（可选）
PRODUCT_HUNT_API_KEY=your_product_hunt_api_key_here

# GitHub API（可选）
GITHUB_TOKEN=your_github_token_here

# IndieHackers API（可选）
INDIEHACKERS_API_KEY=your_indiehackers_api_key_here

# ====== Claude Code SDK ======

# Anthropic API Key（必需）
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ====== 用户配置路径 ======

# 用户配置文件路径（可选，默认：config/user-profile.yaml）
USER_PROFILE_PATH=config/user-profile.yaml

# ====== 可选：需要登录的平台（后期接入）======

# 微博 API（需要登录）
WEIBO_ACCESS_TOKEN=
WEIBO_APP_KEY=

# 小红书 API（需要登录）
XHS_COOKIE=

# 推特 API（需要登录）
TWITTER_BEARER_TOKEN=

# ====== 可选：搜索服务 ======

# Google Search API（用于竞品分析）
GOOGLE_SEARCH_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=

# ====== 开发环境配置 ======

# 开发模式（true/false）
NODE_ENV=development

# 日志级别（debug, info, warn, error）
LOG_LEVEL=info
